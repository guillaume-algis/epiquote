{% extends '::base.html.twig' %}

{% import '::ui.html.twig' as ui %}
{% macro clearer() %}
  <div class="clear"></div>
{% endmacro %}

{% block stylesheets %}
  <link href='http://fonts.googleapis.com/css?family=Droid+Serif' rel='stylesheet' type='text/css' />
  <link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet" />
  <link href="{{ asset('css/ui.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
    
{% block javascripts %}
  <script type="text/javascript" src="{{ asset('js/jquery-1.6.4.min.js') }}"></script>
{% endblock %}

{% block body %}
  {% block header %}
    <header>
      <h1 id="logo">epiquote</h1>
      
      <div id="ordering">
        {{ ui.button_multiple({"Dernières": "#",
                               "Top": "#",
                               "Au hasard": "#"}, 1)
        }}
      </div>
    </header>
  {% endblock %}
    
  {% block page %}
    <div id="page">
      {% block add_search %}
        <div class="content" id="add-search">
          {{ ui.button("Nouvelle quote", "#") }}&nbsp;
          {{ ui.button("Nouvelle quote", "#", "blue") }}
          
          <!--<br/><br/><br/>
          
          <form action="#" method="post">
            <input type="text" name="search" />
            <input type="submit" />
          </form>-->
        </div>
      {% endblock %}
      
      {% block content %}
      
      {% endblock %}
    </div>
  {% endblock %}
    
  {% block footer %}
    <footer>
      <div>
        Copyright (c) Epiquote 2011
      </div>
      <div>
        <a href="#">Informations légales</a>
        &nbsp;|&nbsp;
        <a href="#">A propos</a>
      </div>
      {{ _self.clearer() }}
    </footer>
  {% endblock %}
{% endblock %}
