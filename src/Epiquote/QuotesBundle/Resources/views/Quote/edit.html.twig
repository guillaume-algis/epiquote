{% extends '::layout.html.twig' %}

{% block content %}
<br/>

<h3>Quote edition</h3><br/>

<form action="{{ path('quote_delete', { 'id': entity.id }) }}" method="post">
  {{ form_widget(delete_form) }}
  <button type="submit">Delete this quote</button>
</form>

<br/>

<form action="{{ path('quote_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<br/><br/>

{% endblock %}
