<h1>Quote list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Author</th>
            <th>Rank</th>
            <th>Context</th>
            <th>Content</th>
            <th>Created_at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('quote_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.author }}</td>
            <td>{{ entity.rank }}</td>
            <td>{{ entity.context }}</td>
            <td>{{ entity.content }}</td>
            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('quote_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('quote_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('quote_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
