{% extends '::layout.html.twig' %}

{% block content %}
  <table class="record_properties">
      <tbody>
          <tr>
              <th>Id</th>
              <td>{{ entity.id }}</td>
          </tr>
          <tr>
              <th>Author</th>
              <td>{{ entity.author }}</td>
          </tr>
          <tr>
              <th>Rank</th>
              <td>{{ entity.rank }}</td>
          </tr>
          <tr>
              <th>Context</th>
              <td>{{ entity.context }}</td>
          </tr>
          <tr>
              <th>Content</th>
              <td>{{ entity.content }}</td>
          </tr>
          <tr>
              <th>Created_at</th>
              <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
          </tr>
      </tbody>
  </table>
{% endblock %}
