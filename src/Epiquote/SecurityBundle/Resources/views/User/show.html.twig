{% extends '::layout.html.twig' %}

{% block title %}
  {{ parent() }} - Utilsateur #{{ entity.id }} {{ entity.username }}
{% endblock %}

{% block stylesheets %}
  {{ parent() }}

  <link href="{{ asset('css/forms.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <script src="{{ asset('js/forms.js') }}" type="text/javascript" />
{% endblock %}

{% block content %}

<div class="content">
  <h2>User #{{ entity.id }}</h2>
</div>

<div class="content">
  <table class="record_properties">
      <tbody>
          <tr>
              <th>Id</th>
              <td>{{ entity.id }}</td>
          </tr>
          <tr>
              <th>Username</th>
              <td>{{ entity.username }}</td>
          </tr>
          <tr>
              <th>Password</th>
              <td>{{ entity.password }}</td>
          </tr>
          <tr>
              <th>Salt</th>
              <td>{{ entity.salt }}</td>
          </tr>
          <tr>
              <th>Roles</th>
              <td>{{ entity.roles | join(', ') }}</td>
          </tr>
      </tbody>
  </table>
</div>
    
<div class="content">  
  <a class="ui-button float-left" href="{{ path('user_edit', { 'id': entity.id }) }}">
      Edit
  </a>
    
  <form class="float-left" action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
      {{ form_widget(delete_form) }}
      <button type="submit">Delete</button>
  </form>
  
  <a class="ui-button float-right" href="{{ path('user') }}">
      Back to the list
  </a>
    
  {{ utils.clearer() }}
</div>
    
{% endblock %}